h1= question.title
p= question.body

-if user_signed_in?
  = link_to 'Delete question', question_path(question), method: :delete

h2 Answers

-question.answers.each do |n|
  = n.body
  -if user_signed_in? && n.valid?
    br
    = link_to 'Delete answer', answer_path(n.id.to_i), method: :delete
  br

= form_with model: [question, @answer], local: true do |f|
  = f.label :body, 'Your Answer'
  br
  = f.text_area :body
  br
  = f.submit 'Post Your Answer'
